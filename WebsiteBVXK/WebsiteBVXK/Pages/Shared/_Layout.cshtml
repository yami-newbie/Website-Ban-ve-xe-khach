<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <!-- Boxicons -->
    <link href="https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css" rel="stylesheet" />
    <link href="Assets/css/all.min.css" rel="stylesheet" />
    <!-- My CSS -->
    <link href="~/css/Style.css" rel="stylesheet" />
    <link href="~/css/DangNhap.css" rel="stylesheet" />

    <title>@ViewData["Tittle"]</title>
</head>
<body>
    <!-- SIDEBAR -->
    <section id="sidebar">
        <a asp-page="/Index" class="brand">
            <i class='bx bxs-bus'></i>
            <span class="text">KhanhTruyen</span>
        </a>
        <ul class="side-menu top">
            <li>
                <a asp-page="/DangNhap">
                    <i class='bx bxs-group bx-tada'></i>
                    <span class="text">Đăng Nhập</span>
                </a>
            </li>

            <li>
                <a asp-page="/Index" class="logout">
                    <i class='bx bx-log-out bx-tada'></i>
                    <span class="text">Đăng xuất</span>
                </a>
            </li>

            <li>
                <a asp-page="/Hotline">
                    <i class='bx bx-phone-call bx-tada bx-rotate-180'></i>
                    <span class="text">Hotline</span>
                </a>
            </li>
        </ul>
    </section>
    <!-- SIDEBAR -->
    <!-- CONTENT -->
    <section id="content">
        <!-- NAVBAR -->
        <nav>
            <i class='bx bx-menu'></i>
            <a href="#" class="nav-link"></a>
            <form action="#">
                <div class="form-input">
                    <input type="search" placeholder="Search...">
                    <button type="submit" class="search-btn"><i class='bx bx-search'></i></button>
                </div>
            </form>
            <input type="checkbox" id="switch-mode" hidden>
            <label for="switch-mode" class="switch-mode"></label>
            <a href="#" class="notification">
                <i class='bx bxs-bell'></i>
                <span class="num">8</span>
            </a>
            <a href="#" class="profile">
                <img src="~/images/profile.png">
            </a>
        </nav>
        <!-- NAVBAR -->
        <!-- MAIN -->
        <main>
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </main>
        <!-- MAIN -->
    </section>
    <!-- CONTENT -->

    <script src="https://cdn.jsdelivr.net/npm/vue@2.5.21/dist/vue.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="~/js/Script.js" asp-append-version="true"></script>
    <script src="https://smtpjs.com/v3/smtp.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
@page
@model WebsiteBVXK.Pages.ThongTinVeModel
@{ 
    Layout = "_Layout";
    ViewData["Tittle"] = "Thông Tin Vé Xe";
}

<link rel="stylesheet" href="~/css/ThongTinVe.css"/>

<div class="bg"></div>
<div class="bg bg2"></div>
<div class="bg bg3"></div>
<div method="post" class="row" id ="ket-qua">
    <div class="thongtin">
        <h2><b>Chọn chuyến xe phù hợp</b></h2>
        <ul>
            @{
                if (Model.Titles != null && Model.Titles.Count > 0)
                {
                    foreach(var lichtrinh in Model.Titles)
                    {
                        <li class="card">
                            <div class="card-body">
                                <div class="details">
                                    <h1 class="card-title">
                                        <i class='bx bxs-log-in-circle bx-tada' ></i>
                                        @lichtrinh.DiemDi
                                        <span>&#10230</span>
                                        @lichtrinh.DiemDen
                                    </h1>
                                    <p class="card-text">
                                        <i class='bx bxs-time bx-tada' ></i>
                                        @lichtrinh.GioDi
                                        <span>&#10230</span>
                                        @lichtrinh.GioDen
                                    </p>
                                    <p class="card-text">
                                        <i class='bx bxs-bus bx-tada' ></i>
                                        Loại Xe: @lichtrinh.LoaiXe
                                    </p>
                                    <h5>
                                        <i class='bx bx-money-withdraw bx-tada' ></i>
                                        Giá vé: @lichtrinh.GiaVe.ToString("N2") 
                                        <sup>đ</sup>
                                    </h5>
                                </div>
                                <div class="contentbt">
                                    <form class="contentbt" method = "post" asp-page-handler="click" >
                                        <button name = "id" value = "@lichtrinh.idVe" type="submit">
                                            <span>Chọn Ghế</span>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </li>
                    }
                }
                else
                {
                    <li>
                        <div>Không tìm thấy vé nào</div>
                        <button><a asp-page="/KhachHang/TimVe" class="btn btn-primary">Quay lại</a></button>
                    </li>
                }
            }
        </ul>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

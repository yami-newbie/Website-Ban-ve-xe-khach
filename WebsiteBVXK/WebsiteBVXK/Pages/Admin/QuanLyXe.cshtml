@page
@model WebsiteBVXK.Pages.Admin.QuanLyXeModel
@{
    Layout = "_Layout";
    ViewData["Tittle"] = "Quản Lý Xe";
}

<div class="head-title">
    <div class="left">
        <h1>Trang Quản lý</h1>
        <ul class="breadcrumb">
            <li>
                <a href="#">Trang Quản lý</a>
            </li>
            <li><i class='bx bx-chevron-right'></i></li>
            <li>
                <a class="active" href="#">@ViewData["Tittle"]</a>
            </li>
        </ul>
    </div>
    <a href="#" class="btn-download">
        <i class='bx bxs-cloud-download'></i>
        <span class="text">Download PDF</span>
    </a>
</div>

<div id="quan-ly-xe" class="table-data">

    <div class="todo">
        <div class="head">
            <h3>Thông tin xe</h3>

        </div>

        <div class="input-list">
            <table class="inputable">
                <tr>
                    <td> Mã xe: </td>
                    <td>
                        <input type="text" v-model="xeViewModel.idXe">
                    </td>
                </tr>
                <tr>

                    <td>Tên tài xế:  </td>
                    <td>
                        <input type="text" v-model="xeViewModel.tenTaiXe">
                    </td>
                </tr>

                <tr>
                    <td> Loại xe:  </td>
                    <td>
                        <select type="text" v-model="xeViewModel.loaiXe" @@change="onLoaiXeChange(xeViewModel.loaiXe)">
                            <option value=0>Thường</option>
                            <option value=1>Vip</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td> Số điện thoại: </td>
                    <td>
                        <input type="tel" name="sodienthoai" v-model="xeViewModel.soDienThoai">
                    </td>
                </tr>
                <tr>
                <tr>
                    <td> Số lượng ghế </td>
                    <td>
                        <input type="text" v-model="xeViewModel.soLuongGhe" readonly>
                    </td>
                </tr>
                <td> Biển số: </td>
                <td>
                    <input type="text" name="bienso" v-model="xeViewModel.bienSo">
                </td>
                </tr>
            </table>
        </div>
        <table class="table-button">
            <tr>
                <td>
                    <button class="buttontsx" @@click="createXe()">Thêm</button>
                    <button class="buttontsx" @@click="deleteXe()">Xóa</button>
                    <button class="buttontsx" @@click="updateXe()">Sửa</button>
                </td>

            </tr>
        </table>

    </div>

    <div class="order">
        <div class="head">
            <h3>Danh sách xe</h3>
        </div>
        <table>
            <thead>
                <tr>

                    <th>Mã xe</th>
                    <th>Tên tài xế</th>
                    <th>Loại xe</th>
                    <th>Số điện thoại</th>
                    <th>Số chỗ</th>
                    <th>Biển số</th>
                </tr>
            </thead>
            <tbody>
                <tr v-for="(xe, index) in xes" @@click="editProduct(xe.idXe, index)">
					<td><span class="status pending"> {{xe.idXe}} </span></td>
					<td>{{xe.tenTaiXe}}</td>
					<td>{{xe.loaiXe}}</td>
					<td>{{xe.soDienThoai}}</td>
					<td>{{xe.soLuongGhe}}</td>
					<td>{{xe.bienSo }}</td>
				</tr>
            </tbody>
        </table>

    </div>
</div>

@section scripts{
    <script src="~/js/xes.js"></script>
}
@page
@model WebsiteBVXK.Pages.KhachHang.XacNhanThongTinModel
@{
    Layout = "_Layout";
    ViewData["Tittle"] = "Xác Nhận Thông Tin";
}

<link rel="stylesheet" href="~/css/XacNhanTT.css"/>

<div class="bg"></div>
<div class="bg bg2"></div>
<div class="bg bg3"></div>
<div class="wrapper" id="send-mail">
    <div class="form">
    <div class="title">
        Xác nhận thông tin đặt vé
    </div>
    <div class="form">
        <div class="input-field">
            <label>Hành khách</label>
            <input type="text" class="input" readonly value = "@(Model.customer.name)"/>
        </div>
        <div class="input-field">
            <label>Số điện thoại</label>
            <input type="text" class="input" readonly value = "@(Model.customer.phone)"/>
        </div>
        <div class="input-field">
            <label>Email</label>
            <input type="text" class="input" readonly value = "@(Model.customer.email)"/>
        </div>
        @*<div class="input-field">
            <label>CMND/CCCD</label>
            <input type="text" class="input" readonly value = "@(Model.customer.id)"/>
        </div>*@
        <div class="input-field">
            <label>Chuyến</label>
            <input type="text" class="input" readonly value="@Model.chuyen"/>
        </div>
        <div class="input-field">
            <label>Ngày khởi hành</label>
            <input type="text" class="input" readonly value="@Model.ngayDi"/>
        </div>
        <div class="input-field">
            <label>Loại xe</label>
            <input type="text" class="input" readonly value="@Model.loaiXe"/>
        </div>
        <div class="input-field">
            <label>Số ghế</label>
            <input type="text" class="input" readonly value = "@(Model.seat)"/>
        </div>
        <div class="input-field">
            <label>Tổng tiền</label>
            <input type="text" class="input"  readonly value="@Model.tongtien"/>
        </div>
        @{
            if (Model.state)
            {
                <div>
                    Ghế đã có người đặt!
                </div>
            }
        }
        <form class="input-field" method="post">
            <button type="submit" class="btn">
                <span>Xác nhận</span>
            </button>
        </form>
    </div>
</div>

@section scripts{
    <script src="~/js/sendEmail.js"></script>
    <script src="~/js/emailTemp.js"></script>
    
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
   
}




@page "{handler?}"
@model WebsiteBVXK.Pages.KhachHang.GiuongModel
@{
	Layout = "_Layout";
	ViewData["Tittle"] = "Chọn Ghế";
}

<link rel="stylesheet" href="~/css/ghe.css"/>

<div class="list-seats">
	@*<div class="vexe-container">
		<label><b>CHỌN GHẾ:</b></label>
		<select id="chon-tang" asp-for="tang">
			<option>Tầng Dưới</option>
			<option>Tầng Trên</option>
		</select>
	</div>*@

	<ul class="showcase">
		<li>
			<div class="seat1"></div>
			<small style="color: rgb(128, 128, 128);">Trống</small>
		</li>
		<li>
			<div class="seat selected"></div>
			<small style="color: blue;">Đang Chọn</small>
		</li>
		<li>
			<div class="seat sold"></div>
			<small style="color: white;">Đã Đặt</small>
		</li>
	</ul>
	<div class="row">
	<div  class="container">
		<div class ="row" style="justify-content: space-around">
			<div>Tầng Dưới</div>
		</div>
		<div class ="row" style="justify-content: space-around">
			<div>A</div>
			<div>B</div>
			<div>C</div>
		</div>
		@{
			if(Model.ghes != null)
			{
				for (int i = 0; i <= Model.ghes.Count / 6; i++)
				{
					<div class="row">
						@if(Model.ghes[i * 3].isPick){
							<form method="post" asp-route-id="@(i * 3)" asp-page-handler="clickGhe">
								<button value=@(i * 3) class="seat selected">@(i * 2 + 1)</button>
							</form>
						}
						else{
							<form method="post" asp-route-id="@(i * 3)" asp-page-handler="clickGhe">
								<button value=@i class="seat">@(i * 2 + 1)</button>
							</form>
						}
						@if(Model.ghes[i * 3 + 1].isPick){
							<form method="post" asp-route-id="@(i * 3 + 1)" asp-page-handler="clickGhe">
								<button value=@(i * 3 + 1) class="seat selected">@(i * 2 + 1)</button>
							</form>
						}
						else{
							<form method="post" asp-route-id="@(i * 3 + 1)" asp-page-handler="clickGhe">
								<button value=@(i * 3 + 1) class="seat">@(i * 2 + 1)</button>
							</form>
						}
						@if(i < Model.ghes.Count / 6)
						{
							@if(Model.ghes[i * 3 + 2].isPick){
							<form method="post" asp-route-id="@(i * 3 + 2)" asp-page-handler="clickGhe">
								<button value="@(i * 3 + 2)" class="seat selected">@(i * 2 + 1)</button>
							</form>
							}
							else{
							<form method="post" asp-route-id="@(i * 3 + 2)" asp-page-handler="clickGhe">
								<button value="@(i * 3 + 2)" class="seat">@(i * 2 + 1)</button>
							</form>
							}
						}
					</div>
				}
			}
		}
	</div>
	<div></div>
	<div  class="container">
		<div class ="row" style="justify-content: space-around">
			<div>Tầng Trên</div>
		</div>
		<div class ="row" style="justify-content: space-around">
			<div>A</div>
			<div>B</div>
			<div>C</div>
		</div>
		@{
			if(Model.ghes != null)
			{
				int start = Model.ghes.Count / 2;
				for (int i = 0; i <= Model.ghes.Count / 6; i++)
				{
					<div class="row">
						@if(Model.ghes[start + i * 3].isPick){
							<form method="post" asp-route-id="@(start + i * 3)" asp-page-handler="clickGhe">
								<button value=@(start + i * 3) class="seat selected">@(2 + i * 2)</button>
							</form>
						}
						else{
							<form method="post" asp-route-id="@(start + i * 3)" asp-page-handler="clickGhe">
								<button value=@(start + i) class="seat">@(2 + i * 2)</button>
							</form>
						}
						@if(Model.ghes[start + i * 3 + 1].isPick){
							<form method="post" asp-route-id="@(start + i * 3 + 1)" asp-page-handler="clickGhe">
								<button value=@(start + i * 3 + 1) class="seat selected">@(2 + i * 2)</button>
							</form>
						}
						else{
							<form method="post" asp-route-id="@(start + i * 3 + 1)" asp-page-handler="clickGhe">
								<button value=@(start + i * 3 + 1) class="seat">@(2 + i * 2)</button>
							</form>
						}
						@if(start + i < start + Model.ghes.Count / 6)
						{
							@if(Model.ghes[start + i * 3 + 2].isPick){
							<form method="post" asp-route-id="@(start + i * 3 + 2)" asp-page-handler="clickGhe">
								<button value="@(start + i * 3 + 2)" class="seat selected">@(2 + i * 2)</button>
							</form>
							}
							else{
							<form method="post" asp-route-id="@(start + i * 3 + 2)" asp-page-handler="clickGhe">
								<button value="@(start + i * 3 + 2)" class="seat">@(2 + i * 2)</button>
							</form>
							}
						}
					</div>
				}
			}
		}
	</div>
	</div>
	

	<p class="text">
		<ul>
			<li>Bạn đã chọn <b><span id="count">@Model.gheDangChon.Count</span></b> vé</li>
			<li>Số ghế của bạn <b><span id="count">@(this.Model.GetViTri())</span></b></li>
			<li>Tổng tiền của bạn <b><span id="total">@(((decimal)Model.selected.GiaVe * Model.gheDangChon.Count).ToString("N2"))<sup>đ</sup></span></b></li>
		</ul>
	</p>
	<br>
	<div class="btn12">
		<form method="post" class="btn1">
			<button class="btn1" type="submit" value="Quay lai">
				Quay Lại
			</button>
		</form>
		<div class="btn2">
			<button class="btn2" type="button" value="Tiep tuc">
				<a asp-page="/KhachHang/ThongTinKhachHang">Tiếp Tục</a>
			</button>
		</div>
	</div>
</div>